<% layout('layouts/boilerplate') %>

<div class="dash-wrapper">
  <aside class="dash-sidebar">
    <h2 class="dash-logo">Learnify</h2>
    <ul class="dash-menu">
      <li><a href="/home">Home</a></li>
      <li><a href="#">My Courses</a></li>
      <li><a href="#">Progress</a></li>
      <li><a href="#">Settings</a></li>
      <li><a href="/logout">Logout</a></li>
    </ul>
  </aside>

  <main class="dash-main">
    <header class="dash-header">
      <h1><%= userName %></h1>
      <p>Your learning journey at a glance</p>
    </header>

    <section class="dash-profile">
      <img
        src="https://images.pexels.com/photos/771742/pexels-photo-771742.jpeg?auto=compress&cs=tinysrgb&w=600"
        alt="Profile"
        class="dash-avatar"
      />
      <div>
        <h3><%= userName %></h3>
        <p><%= userEmail %></p>
        <p>Enrolled: Full Stack Web Dev</p>
      </div>
    </section>

    <section class="dash-stats">
      <div class="dash-card">
        <h4>Courses Enrolled</h4>
        <p>4</p>
      </div>
      <div class="dash-card">
        <h4>Completed Modules</h4>
        <p>15</p>
      </div>
      <div class="dash-card">
        <h4>Current Progress</h4>
        <p>76%</p>
      </div>
    </section>
  </main>
</div>
